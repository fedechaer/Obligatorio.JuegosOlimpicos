@model LibreriaWeb.Models.Atleta.AtletaViewModel


@{
    ViewData["Title"] = "AsignarDisciplina";
}

    <h2>Asignar disciplinas a @Model.Nombre @Model.Apellido</h2>

    <form asp-controller="Atleta" asp-action="AsignarDisciplinas" method="post">

        <div>
            <label>Nuevas disciplinas</label>
            <select name="Disciplinas" multiple="multiple" class="form-control">
                @foreach (var disciplina in Model.TodasLasDisciplinas)
                {
                    <option value="@disciplina.Id">@disciplina.NombreDescriptivo</option>
                }
            </select>
        </div>

        <button class="btn btn-primary" type="submit">Guardar</button>
    </form>
